{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // ✅ مهم‌ترین دو خط برای رفع ارورهای مسیر
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  // ✅ فقط مسیرهای درست پروژه
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app",
    "components",
    "lib",
    "next-env.d.ts",
    "pages",
    "utils",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
